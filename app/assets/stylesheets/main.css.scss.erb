#menu_logo {
  border-right: 1px solid lightgrey;
  img { width: 100px; }
}

#blog_filters .item { font-weight: bold; }

.content, p { 
  font-size: 1.3rem !important; 
}

.masthead.segment {
  padding: 1em 0em;
  .bottom.right { position: absolute; bottom: 20px; right: 20px; }
  .bottom.right.copyright { color: black; a { color: black; } } 
  h1 { font-family: 'Railway'; }
}

#home {
  min-height: 600px;
    .logo.item img { margin-right: 1em; }
  .ui.menu .ui.button { margin-left: 0.5em; }
  .main_logo img { width: 100%; }
  h1.ui.header {
    margin-top: 3em;
    margin-bottom: 0em;
    font-size: 4em;
    font-weight: normal;
  }
  h2 {
    font-size: 1.7em;
    font-weight: normal;
  }
}

#home, #our_story {
  background: url(<%= asset_path "awesome_fish.jpg" %>) no-repeat center center fixed !important;
  -webkit-background-size: cover !important;
  -moz-background-size: cover !important;
  -o-background-size: cover !important;
  background-size: cover !important;
}

#our_story, #contributors {
  min-height: 300px;
  h1 { 
    margin-top: 2em; 
    font-family: 'Raleway';
    font-size: 4em;
  }
}

#our_story { h1 { color: black; } }

#our_story_content, #contributors_content { margin: 30px auto; border: none; }

#contributors { 
  background: url(<%= asset_path "typewriter.png" %>) no-repeat center center fixed !important;
  -webkit-background-size: cover !important;
  -moz-background-size: cover !important;
  -o-background-size: cover !important;
  background-size: cover !important;
  h1 { color: white; } 
}

.footer.segment { padding: 5em 0em; }

@media only screen and (max-width: 700px) {
  .ui.fixed.menu { display: none !important; }
  .secondary.pointing.menu .item, .secondary.pointing.menu .menu { display: none; }
  .secondary.pointing.menu .toc.item { display: block; }
  .masthead.segment {
    min-height: 350px;
    h1.ui.header {
      font-size: 2em;
      margin-top: 1.5em;
    }
    h2 {
      margin-top: 0.5em;
      font-size: 1.5em;
    }
  }
}