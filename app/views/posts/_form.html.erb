<%= form_for(@post, html: { class: "ui form" }) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="fields">
    <div class="twelve wide field">
      <%= f.label :user_ids %>
      <%= f.collection_select :user_ids, User.all, :id, :full_name, {}, class: "ui dropdown", multiple: true %>
    </div>
    <div class="four wide field">
      <%= f.label :published %>
      <div class="ui toggle checkbox">
        <%= f.check_box :published, {}, "true", "false" %> 
      </div>
    </div>
  </div>
  <div class="field">
    <%= f.label :content %>
    <%= f.trix_editor :content %>
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "ui grey button" %>
  </div>
<% end %>
